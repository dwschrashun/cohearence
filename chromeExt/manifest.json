{
    "manifest_version": 2,
    "name": "blueberry scrobbler",
    "description": "This extension shows a Google Image search result for the current page",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup/popup.html"
    },
    "background": {
    	"scripts": ["thirdparty/jquery-2.1.4.js", "router/router.js"]
    },
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "http://localhost:1337/"
    ],
    "content_scripts": [
    {
    	"matches": ["http://www.pandora.com/*"],
    	"js": ["contentScripts/test.js"],
    	"run_at":  "document_end"
    },
    {
    	"matches": ["https://www.youtube.com/watch?v=*"],
    	"js": ["thirdparty/jquery-2.1.4.js", "thirdparty/lodash.js", "contentScripts/testYoutube.js"],
    	"run_at":  "document_end"
    }]
}
